<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="movieData"
                type="com.brainybeam.moviedemo.models.MovieData"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dimen_12_dp"
                app:cardElevation="@dimen/dimen_5_dp"
                android:layout_marginTop="@dimen/dimen_16_dp"
                android:layout_marginStart="@dimen/dimen_5_dp"
                android:layout_marginEnd="@dimen/dimen_5_dp"
                android:layout_marginBottom="@dimen/dimen_16_dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_buy_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/color_tag_pre_sale"
                        android:text="@string/buy_ticket"
                        app:backgroundTint="@color/color_ticket_blue"/>

                <ImageView
                        bind:image="@{movieData.posterPath}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_above="@id/btn_buy_ticket"
                        tools:srcCompat="@tools:sample/backgrounds/scenic[7]"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pre_sale"
                        android:clickable="false"
                        android:textSize="12sp"
                        android:layout_margin="@dimen/dimen_10_dp"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/color_tag_pre_sale"
                        android:visibility="@{movieData.preSaleFlag == 0 ? View.GONE : View.VISIBLE}"/>


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Avengers"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@{movieData.title}"
                android:textColor="@android:color/black"/>

        <TextView
                android:id="@+id/tv_movie_genre"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Action"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:textSize="16sp"/>

    </LinearLayout>
</layout>